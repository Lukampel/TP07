@model Tarea
@{
    ViewData["Title"] = "Editar Tarea";
}

<h2>Editar Tarea</h2>

<form asp-action="EditarTarea" method="post">
    <input type="hidden" asp-for="IdTarea" />

    <div class="form-group">
        <label asp-for="NombreTarea"></label>
        <input asp-for="NombreTarea" class="form-control" required />
        <span asp-validation-for="NombreTarea" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaVencimiento"></label>
        <input asp-for="FechaVencimiento" type="date" class="form-control" required />
        <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Activa" class="form-check-input" type="checkbox" />
        <label asp-for="Activa" class="form-check-label"></label>
    </div>

    <div class="form-group form-check">
        <input asp-for="TareaFinalizada" class="form-check-input" type="checkbox" />
        <label asp-for="TareaFinalizada" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="ObtenerListaTareas" class="btn btn-secondary">Cancelar</a>
</form>

